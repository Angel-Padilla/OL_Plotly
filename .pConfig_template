<!-- config file is written using and XML schema as follows:
     1. a <cleanup> element
-->
<config s>
    <cleanup save="update" | "new">
        <columns type="keep" | "remove", headers="CommaSeparatedHeaderNamesToAffect" | "__all__">
        <file>nameFileAffected | __all__</file>
        ...
        </columns>
        <rows type="keep" | "remove", chunks="{start,end};{start1,end1},...,{startX,endX}" | "__all__">
        <file>nameFileAffected | __all__</file>
        ...
        </rows>
    </cleanup>
    <analysis></analysis> <!--TODO:-->
    <plot>
        <global>
            <title iterative="true"|"false">TITLE</title>
            <Axis>
                <x>
                    <label>xLabel</label>
                    <range>
                        <min>minValue | __auto__</min>
                        <max>maxValue | __auto__</max>
                    </range>
                    <auxAxis active="true" | "false">
                        <label>xLabel</label>
                        <range>
                            <min>minValue | __auto__</min>
                            <max>maxValue | __auto__</max>
                        </range>
                    </auxAxis>
                </x>
                <y>
                    <label>yLabel</label>
                    <range>
                        <min>minValue | __auto__</min>
                        <max>maxValue | __auto__</max>
                    </range>
                    <auxAxis active="true" | "false">
                        <label>yLabel</label>
                        <range>
                            <min>minValue | __auto__</min>
                            <max>maxValue | __auto__</max>
                        </range>
                    </auxAxis>
                </y>
            </Axis>
            <trace name="HeaderName", type="typeOfTrace">   
                <line>solid | dashed | __auto__</line>      <!--auto randomizes sets solid line-->
                <color>colorInHex | __auto__</color>        <!--auto randomizes the color-->
                <marker>markerType | __auto__</marker>      <!--auto randomizes the marker-->
                <width>Width | __auto__</width>             <!--auto set the width to 1-->
                <legend>traceLegend | __auto__</legend>     <!--auto sets the legend to the name of the column header-->
                <xReference>reference</xReference>          <!--plots the trace referenced to the reference xAxis-->
                <yReference>reference</yReference>          <!--plots the trace referenced to the reference yAxis-->
            </trace>
            ...
        </global>
        <file name="nameOfFIle">
            <title iterative="true"|"false">TITLE</title>
            <Axis>
                <x>
                    <label>xLabel</label>
                    <range>
                        <min>minValue | __auto__</min>
                        <max>maxValue | __auto__</max>
                    </range>
                    <auxAxis active="true" | "false">
                        <label>xLabel</label>
                        <range>
                            <min>minValue | __auto__</min>
                            <max>maxValue | __auto__</max>
                        </range>
                    </auxAxis>
                </x>
                <y>
                    <label>yLabel</label>
                    <range>
                        <min>minValue | __auto__</min>
                        <max>maxValue | __auto__</max>
                    </range>
                    <auxAxis active="true" | "false">
                        <label>yLabel</label>
                        <range>
                            <min>minValue | __auto__</min>
                            <max>maxValue | __auto__</max>
                        </range>
                    </auxAxis>
                </y>
            </Axis>
            <trace name="HeaderName", type="typeOfTrace">   
                <line>solid | dashed | __auto__</line>      <!--auto randomizes sets solid line-->
                <color>colorInHex | __auto__</color>        <!--auto randomizes the color-->
                <marker>markerType | __auto__</marker>      <!--auto randomizes the marker-->
                <width>Width | __auto__</width>             <!--auto set the width to 1-->
                <legend>traceLegend | __auto__</legend>     <!--auto sets the legend to the name of the column header-->
                <xReference>reference</xReference>          <!--plots the trace referenced to the reference xAxis-->
                <yReference>reference</yReference>          <!--plots the trace referenced to the reference yAxis-->
            </trace>
            ...
        </file>
        ...
    </plot>
</config>